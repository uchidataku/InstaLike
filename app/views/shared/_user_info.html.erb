  <h1 class="profile-pic"><%= gravatar_for(@user) %></h1>
  <h2><%= @user.user_name %></h2>
  <h2><%= @user.name %></h2>
  <%= render 'follow_form' if user_signed_in? %>
  <%= render 'shared/follow_list' %>
