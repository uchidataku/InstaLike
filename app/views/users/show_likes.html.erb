<% provide(:title, "#{@user.user_name}のお気に入り") %>

<div class="row">
  <div class="col-md-8">
    <div class="show-pic-box">
      <% if @likes.any? %>
        <% @likes.each do |post| %>
          <%= link_to post_path(post), class: "show-pic" do %>
            <%= image_tag post.picture %>
          <% end %>
        <% end %>
      <% else %>
        <h3>お気に入りはまだありません</h3>
      <% end %>
      <%= will_paginate @likes %>
    </div>
  </div>
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
  </aside>
</div>
