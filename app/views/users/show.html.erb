<% provide(:title, @user.user_name) %>

<div class="row">
  <div class="col-md-8">
    <div class="show-pic-box">
      <% if @posts.any? %>
        <% @posts.each do |post| %>
          <%= link_to post_path(post), class: "show-pic" do %>
            <%= image_tag post.picture %>
          <% end %>
        <% end %>
      <% end %>
      <%= will_paginate @posts %>
    </div>
  </div>
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
    <% if current_user.id == @user.id %>
      <h5><%= link_to "プロフィール編集", edit_user_registration_path %></h5>
    <% end %>
  </aside>
</div>
