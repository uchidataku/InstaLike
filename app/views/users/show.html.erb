<% provide(:title, @user.user_name) %>

<div class="row">
  <div class="col-md-8">
    <div class="show-pic-box">
      <% if @posts.any? %>
        <% @posts.each do |post| %>
          <%= link_to post_path(post), class: "show-pic" do %>
            <%= image_tag post.picture %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
  <aside class="col-md-4">
    <section class="user_info">
      <h1 class="profile-pic"><%= gravatar_for(@user) %></h1>
      <h2><%= @user.user_name %></h2>
      <h2><%= @user.name %></h2>
      <h4>投稿数<br /><%= @user.posts.count %></h4>
      <h5>Webサイト</h5>
      <h4><%= @user.website %></h4>
      <h5>自己紹介</h5>
      <h4><%= @user.introduction %></h4>
    </section>
    <% if current_user.id == @user.id %>
      <h5><%= link_to "プロフィール編集", edit_user_registration_path %></h5>
    <% end %>
  </aside>
</div>
